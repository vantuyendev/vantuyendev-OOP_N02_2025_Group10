{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Spring Boot App",
			"type": "shell", 
			"command": "mvn",
			"args": ["clean", "compile"],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run Spring Boot App",
			"type": "shell",
			"command": "mvn",
			"args": ["spring-boot:run"],
			"group": "build",
			"isBackground": true,
			"dependsOn": "Build Spring Boot App",
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Compiling.*$",
					"endsPattern": "^.*Started Start.*$"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Test Spring Boot App",
			"type": "shell",
			"command": "mvn",
			"args": ["test"],
			"group": "test",
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Package Spring Boot App",
			"type": "shell",
			"command": "mvn",
			"args": ["clean", "package"],
			"group": "build",
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Clean Spring Boot App",
			"type": "shell",
			"command": "mvn",
			"args": ["clean"],
			"group": "build",
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}